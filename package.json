{
  "name": "reazon",
  "version": "1.0.0",
  "description": "Проект Ozon команды \"Base\"",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && PORT=8081 DEBUG=server node server",
    "build": "handlebars -m public/src/components/*/*.hbs -f ./public/src/components/templates.js && handlebars -m public/src/pages/*/*.hbs -f ./public/src/pages/templates.js",
    "deploy:frontend": "screen -d -m -S frontend sudo npm start",
    "deploy": "screen -d -m -S sudo npm start",
    "drop": "screen -r \"$(screen -ls | grep -Eo '[0-9]{1,}.sudo')\"",
    "lint": "npx eslint . --ext .js",
    "lint:fix": "npx eslint . --ext .js --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontend-park-mail-ru/2022_2_Base.git"
