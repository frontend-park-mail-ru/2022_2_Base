  },
  "homepage": "https://github.com/frontend-park-mail-ru/2022_2_Base#readme",
  "dependencies": {
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "morgan": "^1.10.0"
  },
  "funding": "https://www.donationalerts.com/r/reazon2022",
