<div class="paint-background"></div>

<div class="content_user-page">

    <div class=" global-card_user-page user-card_user-page">

        <div id="user-photo-block">
            <img src={{#if this.avatar}}{{this.avatar}}{{else}}
            "img/UserPhoto.png"{{/if}} class="user-photo_user-page" id="user-photo_user-page"
            alt="user photo">

            <div class="change-pop-up_user-page change-user-photo_user-page" id="change-user-photo_user-page">
                <input type="file" style="display: none;" id="changeUserPhoto__upload"
                       accept="image/jpeg, image/png, image/jpg">
                <div class="pop-up-button_user-page">
                    <img src="img/editButton.svg" id="changeUserPhoto" class="pop-up-button_user-page-pic"
                         alt="edit button">
                </div>
                <div class="separation-line_user-page"></div>
                <div class="pop-up-button_user-page">
                    <img src="img/deleteButton.svg" id="deleteUserPhoto" class="pop-up-button_user-page-pic"
                         alt="delete button">
                </div>
            </div>

        </div>

        <div class="user-card_user-page-block">
            <div class="user-card_user-page__block-title text-normal-large-normal"> Имя</div>


            <div class="text-normal-large-normal user-name_user-page" name="Имя" id="name" type="text"
                {{#if this.name}}value="{{this.name}}">
                    <span id="name-text">{{this.name}}
                    </span>
                {{else}}
                    value="Нет информации">
                    <span id="name-text">Нет информации</span>
                {{/if}}
                <a class="edit-profile-data">
                    <img class="edit-button_user-page" src="img/editButton.svg" alt="edit button">
                </a>
            </div>


        </div>

        <div class="user-card_user-page-block">
            <div class="user-card_user-page__block-title text-normal-large-normal"> Почта</div>

            <div class="user-name_user-page user-card_user-page-block-data text-normal-large-normal"
                 name="Почта" id="email"
                 type="email"
                {{#if this.email}}value="{{this.email}}"> <span id="email-text">{{this.email}}</span>{{else}}
                    value="Нет информации"> <span id="email-text">Нет информации </span>{{/if}}
                <a class="edit-profile-data">
                    <img class="edit-button_user-page" src="img/editButton.svg" alt="edit button">
                </a>
            </div>
        </div>

        <div class="user-card_user-page-block">
            <div class="user-card_user-page__block-title text-normal-large-normal">Телефон</div>

            <div class="user-card_user-page-block-data user-name_user-page text-normal-large-normal" name="Телефон"
                 id="phone" type="tel"
                {{#if this.phone}}value={{this.phone}}>
                    <span id="phone-text">{{this.phone}} </span>
                {{else}}
                    value="Нет информации"> <span id="phone-text">Нет информации </span>
                {{/if}}

                <a class="edit-profile-data">
                    <img class="edit-button_user-page" src="img/editButton.svg" alt="edit button">
                </a>
            </div>


        </div>
        <div class="user-card_user-page-block-password" name="Пароль" id="password" type="password">
            <a href="/edit" class="link text-normal-large-normal edit-profile-data"> Изменить пароль </a>
        </div>


    </div>

    <div class="popUp-fade_user-page" id="popUp-fade_user-page"></div>
    <div class="popUp_user-page" id="popUp_user-page"></div>

    <div class="global-card_user-page payment-cards-block_user-page" id="bank-card_user-page__main">
        <div class="card-block-title_user-page text-normal-large-normal"> Банковские карты</div>
        <div class="payment-cards-items_user-page" id="payment-cards-items_user-page">


        </div>
    </div>

    <div class="global-card_user-page address-cards_user-page-block" id="address-card_user-page__main">
        <div class="card-block-title_user-page text-normal-large-normal"> Адреса доставки</div>
        <div class="address-cards_user-page-items" id="address-cards_user-page-items">

        </div>
    </div>
</div>

