<div class="paint-background"></div>
<div class="content-product-page content-product-page_margin">
    <div class="content-product-page-block-background product-page-header-main_padding" id="product-page__header-product">

    </div>
    <div class="product-page-main">
        <div class="product-page-main__information content-product-page-block-background product-page-header-main_padding">
            <img src="{{imgsrc}}" alt="product photo" class="product-page-main__photo">
            <div class="product-page-main__information-text product-page-main__information-text_margin">
                <div class="product-page-main__description">
                    <span class="product-page-information__header text-normal-default__bold">Описание</span>
                    <span class="product-page-color-jet-black text-normal-default">
                        {{#if description}}
                            {{description}}
                        {{else}}
                        <span class="text-normal-default">Нет описания</span>
                        {{/if}}
                    </span>
                </div>
                <div class="product-page-main__characteristics">
                    <span class="product-page-information__header text-normal-default__bold">Коротко о товаре</span>
                    {{#if characteristics}}
                        {{#each characteristics}}
                            <div class="product-page-characteristics__field">
                                <div class="product-page-characteristics__name-dotted">
                                    <span class="product-page-characteristics__name text-normal-default">{{this.name}}</span>
                                </div>
                                <span class="product-page-color-jet-black text-normal-default">{{this.data}}</span>
                            </div>
                        {{/each}}
                    {{else}}
                        <span class="text-normal-default">Нет информации о товаре</span>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="product-page-main__add-cart content-product-page-block-background">
            <div class="product-page-main__price">
                <span class="text-normal-default product-page-main__price-strikethrough">{{price}} ₽</span>
                {{#if salePrice}}
                    <div class="product-page-main__sales-value text-normal-small">
                        -{{discount}}%
                    </div>
                {{/if}}
            </div>
            <span class="product-page-color-jet-black text-normal-very-large">{{salePrice}} ₽</span>
            <span class="product-page-color-jet-black text-normal-default">Доставка: {{date}}</span>
            <div id="product-block-button-add-to-cart" data-id="{{this.id}}">
            </div>
        </div>
    </div>
</div>
<div class="paint-background"></div>
