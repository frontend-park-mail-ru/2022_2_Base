{{#each item}}
    {{#if this.addCard}}
        <a id="add-/{{this.id}}" class="address-card-template add-address-card" id="add-address-card">
            <div class="text-normal-default"></div>

            <div class="text-normal-small">
                <img class="add-address-card-pic" src="img/Add_card.svg" alt="PLUS">
                <div class="text-add-address-card text-normal-default"> Добавить адрес</div>
            </div>
        </a>

    {{else}}
        <div>
            <a {{#if this.priority}}
            class="address-card-template address-card"
            {{else}}
            class="address-card-template address-card other-address-card"
            {{/if}}>

                <div class="address-card-city text-normal-default">
                    {{this.city}}
                </div>

                <div class="address-card-city text-normal-default">
                    {{this.street}}
                </div>

                <div class="address-card-city text-normal-default"> {{this.house}} </div>
            </a>

            <div class="change-pop-up_user-page change-address-card">
                <a id="edit-/{{this.id}}" class="pop-up-button_user-page">
                    <img src="img/editButton.svg" class="pop-up-button-pic_user-page">
                </a>
                <div class="separation-line_user-page"></div>
                <a id="delete-{{this.id}}" class="pop-up-button_user-page">
                    <img src="img/deleteButton.svg" class="pop-up-button-pic_user-page">
                </a>
            </div>
        </div>
    {{/if}}
{{/each}}
