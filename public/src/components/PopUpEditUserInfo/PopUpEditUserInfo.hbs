<form method="post" class="popup-form_user-info" novalidate>
    <div class="popup-form_user-info__header text-normal-large-normal">
        Изменить {{title}}
    </div>
    <div class="popup-form_user-info__fields">
        {{#each fields}}
            <div class="popup-form__field">
                <div class="field-name_user-info text-normal-default">
                    {{this.name}}
                </div>
                <input class="popup-form_user-info__input text-normal-default" name="{{this.name}}" id="{{this.name}}"
                       value="{{this.value}}">
            </div>
        {{/each}}
    </div>
    <div class="popup-form_user-info__buttons">
        <button class="button-default popup-form_user-info__button popup-form_user-info__cancel" id="popup-form_user-info__cancel">Отменить</button>
        <button class="button-default popup-form_user-info__button popup-form_user-info__apply" id="popup-form_user-info__apply">Применить</button>
    </div>
</form>
