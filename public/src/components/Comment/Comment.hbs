{{#each comments}}
    <div class="comment">
        <div class="comment__header">
            <img src="{{this.userPhoto}}" alt="user photo" class="comment__userPhoto">
            <span class="comment__color-pure-black text-normal-large-normal">{{this.userName}}</span>
            <div class="comment__date-range">
                <span class="comment_date text-normal-default">{{this.date}}</span>
                <div>Звездочки скоро</div>
            </div>
        </div>
        <div class="comment__content">
            <div class="comment__content-sections">
                <span class="text-normal-large-normal comment__color-pure-black">Достоинства</span>
                <span class="text-normal-default comment__color-jet-black">
                    {{#if this.dignity}}
                        {{this.dignity}}
                    {{else}}
                        нет
                    {{/if}}
                </span>
            </div>
            <div class="comment__content-sections">
                <span class="text-normal-large-normal comment__color-pure-black">Недостатки</span>
                <span class="text-normal-default comment__color-jet-black">
                    {{#if this.limitations}}
                        {{this.limitations}}
                    {{else}}
                        нет
                    {{/if}}
                </span>
            </div>
            <div class="comment__content-sections">
                <span class="text-normal-large-normal comment__color-pure-black">Комментарий</span>
                <span class="text-normal-default comment__color-jet-black">
                    {{#if this.comment}}
                        {{this.comment}}
                    {{else}}
                        нет
                    {{/if}}
                </span>
            </div>
            <div class="comment-content__like-dislike comment-content__like-dislike_margin">
                <button type="button" class="comment-content-like-button">
                    <img src="img/like-finger.svg" alt="like">
                    <span class="text-normal-default">
                        {{this.likeCount}}
                    </span>
                </button>
                <button type="button" class="comment-content-like-button">
                    <img src="img/dislike-finger.svg" alt="dislike">
                    <span class="comment-content-like-text text-normal-default">
                        {{this.dislikeCount}}
                    </span>
                </button>
            </div>
        </div>
    </div>
{{/each}}