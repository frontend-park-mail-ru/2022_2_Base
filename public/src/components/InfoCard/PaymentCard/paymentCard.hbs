{{#each item}}
    {{#if this.addCard}}

        <div class="payment-card-template add-payment-card" id="add-payment-card">
            <div class="text-normal-default"></div>

            <div class="text-normal-default">
                <img class="add-card-pic__payment-card" src="/img/Add_card.svg" alt="Add new payment card button">
                <div class="text-add-card__payment-card text-normal-default"> Добавить карту</div>
            </div>

        </div>

    {{else}}
        <div class="payment-card-wrapper" id="wrapper-{{this.id}}">

            <div {{#if this.priority}}
            class="payment-card payment-card-template primary-payment-card"
            {{else}}
            class="payment-card payment-card-template other-payment-card payment-card"
            {{/if}} id="create-{{this.id}}">
                <div class="payment-card-title text-normal-default">
                    {{#if this.priority}}
                        Основная карта
                    {{else}}
                        Дополнительная карта
                    {{/if}}

                </div>

                <div class="payment-card-number text-normal-default">
                    {{this.number}}

                </div>


                <div class="card-date-type_payment-card">
                    <div class="expiry-date__payment-card text-normal-default">{{this.expiry}}</div>

                    <img class="payment-system-logo" src="/img/MIR.svg" alt="Payment system logo">
                </div>
            </div>

            <div class="change-payment-card user-page__change-pop-up" id="change-payment-card-{{this.id}}">
                <a id="delete-{{this.id}}" class="user-page__pop-up-button">
                    <img id="delete-img-{{this.id}}" src="/img/deleteButton.svg"
                         class="user-page__pop-up-button-pic delete-payment-card" alt="delete payment card button">
                </a>
            </div>
        </div>
    {{/if}}
{{/each}}
