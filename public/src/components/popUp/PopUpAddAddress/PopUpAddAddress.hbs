<form method="post" class="popup-form_add-address" novalidate>
    <div class="popup-form_add-address__header text-normal-large-normal">
        {{#if city}}Изменить{{else}}Добавить{{/if}} адрес
    </div>
    <div class="popup-form_add-address__fields">
        <div class="popup-form_add-address__country-city">
            <div class="popup-form__field">
                <div class="field-name_add-address text-normal-default">
                    Город
                </div>
                <input type="text" maxlength="30" class="popup-form_add-address__input text-normal-default" id="city" {{#if city}}
                       value="{{city}}" {{/if}}>
            </div>
        </div>
        <div class="popup-form_add-address__street-house">
            <div class="popup-form__field">
                <div class="field-name_add-address text-normal-default">
                    Улица
                </div>
                <input type="text" maxlength="30" class="popup-form_add-address__input text-normal-default" id="street" {{#if street}}
                       value="{{street}}" {{/if}}>
            </div>
            <div class="popup-form_add-address__house">
                <div class="popup-form__field">
                    <div class="field-name_add-address text-normal-default">
                        Дом
                    </div>
                    <input type="text" maxlength="6" class="popup-form_add-address__input text-normal-default" id="house" {{#if house}}
                           value="{{house}}" {{/if}}>
                </div>
                <div class="popup-form__field">
                    <div class="field-name_add-address text-normal-default">
                        Квартира
                    </div>
                    <input type="text" maxlength="6" class="popup-form_add-address__input text-normal-default" id="flat" {{#if flat}}
                           value="{{flat}}" {{/if}}>
                </div>
            </div>
        </div>
    </div>
    <div class="popup-form_add-address__buttons">
        <button class="button-default popup-form_add-address__button popup-form_add-address__cancel"
                id="popup-form_add-address__cancel">Отменить
        </button>
        <button class="button-default popup-form_add-address__button popup-form_add-address__apply"
                id="popup-form_add-address__apply">Применить
        </button>
    </div>
</form>
